{
  "parser": "babel-eslint",
  "globals": {
    "document": true,
    "window": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [".js", ".jsx"],
        "paths": [
          "./src",
          "./src/components",
          "./src/components/auth",
          "./src/components/common",
          "./src/components/data-table",
          "./src/components/layout"
        ]
      }
    }
  },
  "rules": {
    "arrow-parens": "off",
    "eol-last": "off",
    "eqeqeq": [
      "error",
      "allow-null"
    ],
    "camelcase": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/extensions": [
      "off",
      "always", {
        "js": "never"
      }
    ],
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": [
      "error", {
        "ignore": ["^@awc", "^@globals$", "^@theme$"]
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "ignoredNodes": [
          "JSXAttribute",
          "JSXSpreadAttribute"
        ]
      }
    ],
    "jsx-quotes": [
      "warn",
      "prefer-double"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error",
      120,
      {
        "ignoreComments": true
      }
    ],
    "new-cap": "error",
    "newline-before-return": "off",
    "no-console": "error",
    "no-eval": "error",
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "no-mixed-spaces-and-tabs": "error",
    "no-undef": "error",
    "no-underscore-dangle": "off",
    "no-unused-vars": "error",
    "object-curly-spacing": "off",
    "object-shorthand": [
      "error",
      "properties"
    ],
    "one-var": "off",
    "quotes": [
      "error",
      "single"
    ],
    "react/jsx-filename-extension": "off",
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-indent-props": [
      "error",
      2
    ],
    "react/no-set-state": "off",
    "react/jsx-closing-bracket-location": "error",
    "react/jsx-closing-tag-location": "error",
    "react/jsx-equals-spacing": [
      "error",
      "never"
    ],
    "react/jsx-first-prop-new-line": [
      "error",
      "multiline"
    ],
    "react/jsx-no-duplicate-props": "error",
    "react/jsx-pascal-case": "error",
    "react/jsx-wrap-multilines": "off",
    "react/require-default-props": "off",
    "react/default-props-match-prop-types": [
      "error",
      {
        "allowRequiredDefaults": true
      }
    ],
    "semi-spacing": "error",
    "semi": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "space-infix-ops": "error"
  }
}
